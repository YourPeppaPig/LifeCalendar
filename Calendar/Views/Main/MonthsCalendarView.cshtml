@model Calendar.ViewModels.Main.MonthModel

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Calendar</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/calendar.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-primary">
        <a class="navbar-brand" href="#">LifeCalendar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">Calendar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Profile</a>
                </li>
            </ul>
        </div>
        <span class="nav-text" style="color: white;">
            @Model.CurrentDate
        </span>
    </nav>
    <div class="container-fluid" style="margin-top:30px">
        <div class="row">
            <div class="col-sm-2">
                <h3>Вид календаря</h3>
                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">По годам</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">По месяцам</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">По дням</a>
                    </li>
                </ul>
                <hr class="d-sm-none">
                <h4 style="margin-top: 30px">Ячейки</h4>
                <div class="container row">
                    <div class="border border-primary bg-primary col-sm-1" style="width: 20px; height: 20px"></div>
                    <h6 class="col-sm-10" style="">Есть события</h6>
                </div>
                <div class="container row">
                    <div class="col-sm-1" style="width: 20px; height: 20px; background-color: gray; border-color: gray; border-width: 1px; border-style: solid;"></div>
                    <h6 class="col-sm-10">Нет событий</h6>
                </div>
                <div class="container row">
                    <div class="border col-sm-1" style="width: 20px; height: 20px"></div>
                    <h6 class="col-sm-10">Будущее</h6>
                </div>
            </div>
            <div class="col-sm-8">
                <h3>Календарь</h3>

                @foreach (var year in Model.YearPreviews)
                {
                    <h5>@year.Year</h5>
                    <div id="grid" class="grid">
                        @foreach (var month in year.MonthPreview)
                        {
                            @if (month.Type.ToString().Equals("FILLED"))
                            {
                                <a href="" class="item-filled">@month.Month</a>
                            }
                            else if (month.Type.ToString().Equals("EMPTY"))
                            {
                                <a href="" class="item-empty">@month.Month</a>
                            }
                            else
                            {
                                <a href="" class="item-future">@month.Month</a>
                            }
                        }
                    </div>
                }
            </div>
            <div class="col-sm-2">
                <h3>Цели</h3>
                <table class="table">
                    <tbody>
                        @foreach (var goal in Model.Goals)
                        {
                            <tr>
                                <td><a href="#">@goal.Description</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <hr class="d-sm-none">
            </div>
        </div>
    </div>
</body>
</html>